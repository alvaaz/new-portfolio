---
const small = {
  width: 20,
  height: 20,
  viewBox: "0 0 20 20",
};

const middle = {
  width: 24,
  height: 25,
  viewBox: "0 0 24 25",
};

const { size, classes, color } = Astro.props;
---

<svg
  {...size === "small" ? small : middle}
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class={classes}
>
  <path
    d={size === "small" ? "M7.5 15L12.5 10L7.5 5" : "M9 18.5l6-6-6-6"}
    stroke={color}
    stroke-width="3"
    stroke-linecap="round"
    stroke-linejoin="round"></path>
</svg>
