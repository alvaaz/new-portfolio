---
import { SOCIAL_LINKS } from "../consts";
import Icons from "../components/Icons/index.astro";
---

<footer class="bg-gray-800 py-16">
  <div
    class="container mx-auto flex lg:items-center flex-col lg:flex-row px-4 sm:px-8 justify-start"
  >
    <div class="grow mb-8 lg:mb-0 basis-auto lg:basis-1/4">
      <h2
        class="font-semibold text-2xl lg:text-3xl xl:text-4xl text-white mb-4"
      >
        Let's keep in touch
      </h2>
      <p class="text-xl md:text-2xl text-white mb-4">
        You can find me over on{" "}
        <span class="hidden lg:inline"> ðŸ‘‰</span>
        <span class="inline lg:hidden"> ðŸ‘‡</span>
      </p>
    </div>
    <div class="grow text-xl flex gap-4 flex-wrap">
      {
        SOCIAL_LINKS.map((link) => (
          <a
            class="basis-32 grow text-center rounded-lg bg-gray-700 cursor-pointer transform transition ease-in-out duration-300 hover:-translate-y-2 hover:shadow-xl p-4"
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
          >
            <div>
              <Icons
                name={link.name}
                className="mx-auto mb-0 sm:mb-4 w-8 sm:w-full"
              />
              <p class="text-white mb-0 capitalize">{link.name}</p>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</footer>
